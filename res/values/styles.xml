<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="TextAppearance">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHighlight">#FFFF9200</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="android:textColorLink">#5C5CFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.SearchResult">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textColorHint">?android:textColorHintInverse</item>
    </style>

    <style name="TextAppearance.SearchResult.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.SearchResult.Subtitle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
    </style>

    <style name="MmsHoloTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MmsActionBarHoloTheme</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_ab_back_holo</item>
        <item name="android:windowBackground">@drawable/comversation_bg</item>
    </style>
    
    <style name="MmsActionBarHoloTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_light_holo</item>
        <item name="android:textColor">@color/shendu_conversation_title_text_color</item>
    </style>
    
    <style name="WidgetTitle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffc7c7c7</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="NotificationPrimaryText">
        <item name="android:textColor">#cccccc</item>
    </style>

    <style name="NotificationSecondaryText">
        <item name="android:textColor">#666666</item>
    </style>

    <style name="NotificationSubjectText">
        <item name="android:textColor">#999999</item>
    </style>
    <!-- shutao 2013-2-28 -->
    <style name="QuickMessagePopupTheme" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:actionBarStyle">@*android:style/Widget.Holo.Light.ActionBar</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

</resources>
